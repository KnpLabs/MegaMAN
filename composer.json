{
    "name": "knplabs/mega-man",
    "description": "Quick access to your vendors documentation",
    "license": "MIT",
    "authors": [
        {
            "name": "Pierre PLAZANET",
            "email": "pierre.plazanet@knplabs.com"
        }
    ],
    "keywords": ["documentation", "man", "manual", "dependencies", "vendor", "interface", "merge"],
    "require": {
        "php": ">=5.3", 
        "michelf/php-markdown": "~1.5",
        "symfony/config": "~2.4|~3.0",
        "symfony/dependency-injection": "~2.4|~3.0",
        "symfony/finder": "~2.4|~3.0",
        "symfony/http-kernel": "~2.4|~3.0",
        "symfony/routing": "~2.4|~3.0",
        "tijsverkoyen/css-to-inline-styles": "~1.5"
    },
    "require-dev": {
        "pedrotroller/php-cs-custom-fixer": "^1.4",
        "phpspec/phpspec": "^2.2"
    },
    "autoload": {
        "psr-0": {
            "Knp\\MegaMAN": "src/"
        }
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.1.x-dev"
        }
    }
}
